<script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.js'></script>
<script>

  var reservationsRaw = {{{ reservations }}};
  var reservations = reservationsRaw.map(r => {
    //avoiding re-seed for presentation sake
    let startDate = new Date(r.startTime);
    startDate.setFullYear(2024);
    let endDate = new Date(r.endTime);
    endDate.setFullYear(2024);
    return { "start": startDate, "end": endDate, "title": r.eventName, "display": "auto" };
  })
  console.log(reservations);

  document.addEventListener('DOMContentLoaded', function () {
    var calendarEl = document.getElementById('calendar');
    var calendar = new FullCalendar.Calendar(calendarEl, {
      initialView: 'dayGridMonth',
      events: reservations
    });
    calendar.render();
  });


</script>

<section class="section">
  <h1 class="title">Calendar</h1>
</section>
<section class="section" id="calendar">
</section>