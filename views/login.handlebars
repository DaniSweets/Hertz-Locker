<div class="section login-container">
  <div class="login-form ">
    <h2 class="title">Login</h2>
    <form id="login-form">
      <div class="form-group field">
        <label for="email-login" class="label">Email:</label>
        <input class="form-control input" type="text" id="email-login" required />
      </div>
      <div class="form-group field">
        <label for="password-login" class="label">Password:</label>
        <input class="form-control input" type="password" id="password-login" required />
      </div>
      <div class="form-group field">
        <button class="button btn btn-primary" type="submit">Login</button>
      </div>
    </form>
  </div>

</div>

<script type="application/javascript" src="login.js"></script>
